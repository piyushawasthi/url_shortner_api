<h1>Listing Short Visits Geolocations</h1>
<hr/>
<table class="table table-responsive table-striped">
  <thead>
  <tr>
    <th>Visitor IP</th>
    <th>Visitor City</th>
    <th>Visitor State</th>
    <th>Visitor Country</th>
    <th>Visitor Country Code</th>
    <th>Time of Visit</th>
  </tr>
  </thead>

  <tbody>
  <% @short_visits.each do |short_visit| %>
      <tr>
        <td><%= short_visit.visitor_ip %></td>
        <td><%= short_visit.visitor_city%></td>
        <td><%= short_visit.visitor_state %></td>
        <td><%= short_visit.visitor_country %></td>
        <td><%= short_visit.visitor_country_iso2 %></td>
        <td><%= short_visit.created_at %></td>
      </tr>
  <% end %>
  </tbody>
</table>
<br>
<%= link_to 'Back', short_urls_path, class: "btn btn-primary", "data-turbolinks" => "false" %>