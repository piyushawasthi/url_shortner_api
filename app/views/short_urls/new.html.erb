<div class="row">
  <div class="col-md-6 col-md-offset-3">
	<h1>New Short Url</h1>
    <hr />
	<%= form_for(:short_url, url: short_urls_path) do |f| %>

	    <%= f.label :original_url %>
	    <%= f.text_field :original_url, class: 'form-control' %><br/>
	    <div class="col-md-10">
	    <%= f.submit "Create Short Url", class: "btn btn-primary" %>
	    </div>
	<% end %>
	<div class="col-md-2">
		<%= link_to 'Back', short_urls_path, class: "btn btn-primary" %>
	</div>
  </div>
</div>
